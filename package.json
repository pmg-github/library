{
  "name": "pmg-library",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/pmg-library.umd.cjs",
  "module": "./dist/pmg-library.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/pmg-library.js",
      "require": "./dist/pmg-library.umd.cjs"
    },
    "./nuxt": {
      "types": "./dist/nuxt.d.ts",
      "import": "./dist/nuxt.js",
      "require": "./dist/nuxt.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:nuxt",
    "build:nuxt": "tsup src/nuxt.ts --format esm,cjs --dts",
    "storybook": "storybook dev -p 6006"
  },
  "dependencies": {
    "vite-plugin-dts": "^4.5.4",
    "vue": "^3.5.13"
  },
  "peerDependencies": {
    "vee-validate": "^4.15.1",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.0",
    "@nuxt/kit": "^3.17.5",
    "@storybook/addon-a11y": "^9.0.8",
    "@storybook/addon-docs": "^9.0.8",
    "@storybook/addon-onboarding": "^9.0.8",
    "@storybook/addon-vitest": "^9.0.8",
    "@storybook/vue3-vite": "^9.0.8",
    "@tailwindcss/postcss": "^4.1.10",
    "@types/node": "^24.0.1",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "playwright": "^1.53.0",
    "postcss": "^8.5.5",
    "storybook": "^9.0.8",
    "tailwindcss": "^4.1.10",
    "tsup": "^8.5.0",
    "typescript": "~5.8.3",
    "vee-validate": "^4.15.1",
    "vite": "^6.3.5",
    "vue-tsc": "^2.2.8",
    "yup": "^1.6.1"
  }
}
