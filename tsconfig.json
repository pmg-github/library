{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "preserve",
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": false // set to true if you only want to emit types
  },
  "include": [
    "src/**/*",
    "auto-imports.d.ts",
    "components.d.ts",
    "app.config.ts",
    "vite.config.ts"
  ],
  "exclude": ["**/*.stories.ts", "**/*.stories.d.ts", "**/*.stories.js"]
}
